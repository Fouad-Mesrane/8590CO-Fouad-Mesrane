<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="AutomationPractice" verbose="1" >

    <listeners>
        <listener class-name="listeners.AnnotationTransformer"/>
    </listeners>

    <parameter name="browser" value="chrome"/>
    <parameter name="url" value="http://automationpractice.com"/>

    <test name="test">
        <classes>
            <class name="tests.RegistrationTest"/>
            <class name="tests.AuthenticationTest"/>
            <class name="tests.SearchBarTest"/>
            <class name="tests.AddProductToCartTest"/>
            <class name="tests.CheckoutTest"/>
            <class name="tests.SubmitOrderTest"/>
            <class name="tests.ErrorValidationTest"/>
        </classes>
    </test>

</suite>
